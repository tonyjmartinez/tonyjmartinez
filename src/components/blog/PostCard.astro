---
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog">;
  readingTime?: string;
}

const { post, readingTime } = Astro.props;
const { title, description, pubDate, tags } = post.data;

const formattedDate = pubDate.toLocaleDateString("en-US", {
  year: "numeric",
  month: "short",
  day: "numeric",
});
---

<article class="group rounded-xl border border-(--color-border) bg-(--color-surface) p-6 transition-all hover:border-brand-300 hover:shadow-md dark:hover:border-brand-700">
  <a href={`/blog/${post.slug}`} class="block">
    <h3 class="text-lg font-semibold text-(--color-text-primary) group-hover:text-brand-600 dark:group-hover:text-brand-400 transition-colors">
      {title}
    </h3>

    <p class="mt-2 text-sm text-(--color-text-secondary) line-clamp-2">
      {description}
    </p>

    <div class="mt-4 flex flex-wrap items-center gap-3 text-xs text-(--color-text-muted)">
      <time datetime={pubDate.toISOString()}>{formattedDate}</time>
      {readingTime && (
        <>
          <span aria-hidden="true">&middot;</span>
          <span>{readingTime}</span>
        </>
      )}
    </div>

    {tags.length > 0 && (
      <div class="mt-3 flex flex-wrap gap-2">
        {tags.map((tag) => (
          <span class="rounded-full bg-(--color-surface-raised) px-2.5 py-0.5 text-xs text-(--color-text-muted)">
            {tag}
          </span>
        ))}
      </div>
    )}
  </a>
</article>
