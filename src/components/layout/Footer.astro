---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { href: "https://github.com/tonyjmartinez", label: "GitHub" },
  { href: "https://twitter.com/tonyjmartinez", label: "X / Twitter" },
] as const;
---

<footer class="footer">
  <div class="container footer__inner">
    <p class="footer__copy">
      &copy; {currentYear} Tony Martinez. Built with
      <a href="https://astro.build" rel="noopener noreferrer" target="_blank">Astro</a>
      &amp; MDX.
    </p>

    <nav aria-label="Social links">
      <ul class="footer__links" role="list">
        {
          socialLinks.map(({ href, label }) => (
            <li>
              <a
                href={href}
                class="footer__link"
                rel="noopener noreferrer"
                target="_blank"
              >
                {label}
                <span class="sr-only">(opens in new tab)</span>
              </a>
            </li>
          ))
        }
        <li>
          <a href="/rss.xml" class="footer__link">
            RSS
          </a>
        </li>
      </ul>
    </nav>
  </div>
</footer>

<style>
  .footer {
    margin-top: var(--space-24);
    border-top: 1px solid var(--color-border);
    padding-block: var(--space-8);
  }

  .footer__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  .footer__copy {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .footer__copy a {
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer__copy a:hover {
    color: var(--color-accent);
  }

  .footer__links {
    display: flex;
    gap: var(--space-4);
    list-style: none;
  }

  .footer__link {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer__link:hover {
    color: var(--color-accent);
  }
</style>
